<%-
  nodes = bc_num_slots.to_i
  mem = memory.to_i
  ppn = num_cores.to_i
  gpus = num_gpus.to_i

  case node_type
  when "any"
    slurm_args = [ "--nodes", "#{nodes}", "--ntasks-per-node", "#{ppn}", "--mem", "#{mem}G", "--gpus", "#{gpus}" ]
  end
%>
---
batch_connect:
  template: basic
  conn_params:
    - ollama_url
    - ollama_models
    - ollama_model
script:
  accounting_id: "<%= auto_accounts %>"
  queue_name: "<%= auto_queues %>"
  native:
  <%- slurm_args.each do |arg| %>
    - "<%= arg %>"
  <%- end %>
    - "--wckey=multitenant"
